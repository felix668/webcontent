body,p,ul,li,h3,h1{margin:0;padding:0;}
ul,li{list-style:none}
img{border:none;width:100%;display: block;}
a{text-decoration:none;-webkit-touch-callout:none;}
*{-webkit-tap-highlight-color:rgba(0, 0, 0, 0);-webkit-animation-fill-mode:both!important}
$fontSize:.28rem;
$bodycolor:#fff;
$bodyBgcolor:#fff;
$greytext:#666;
body{font-family: "microsoft yahei","Helvetica Neue", Helvetica, STHeiTi, sans-serif;-webkit-text-size-adjust:none;-webkit-user-select:none;font-size:$fontSize;color:$bodycolor;background-color:#fff;background-repeat:repeat-y;background-size: 100% auto;}
%justifyflex{
	display: -webkit-flex;
	-webkit-align-items:start;
    -webkit-justify-content: justify;
	display: -webkit-box;
	display: box;
	-webkit-box-align:start;
	-webkit-box-pack:justify;
}
%centerflex{
	display: -webkit-flex;
	-webkit-align-items:center;
    -webkit-justify-content: center;
	display: -webkit-box;
	display: box;
	-webkit-box-align:center;
	-webkit-box-pack:center;
}
.banner{height: 7.1rem;}
.title{margin-top: .76rem;}
.bookinfo{@extend %justifyflex;margin:-.1rem .4rem 0;}
.bookinfo .bcover{width: 2.06rem;}
.bookinfo .info{width: 4.54rem;}
h1{font-size: .32rem;font-weight: normal;line-height: .66rem;}
.bookinfo p{color: #999;line-height: .42rem;margin-top:.04rem;display: -webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:3;text-overflow:ellipsis;overflow: hidden;} 
.btn{width:4.26rem;height:1rem;background: url(../images/btns.png) no-repeat;background-size: 100% auto;margin:.24rem auto 0;position: relative;z-index: 3}
.b1{background-position: 0 -4rem}
.b2{background-position: 0 0}
.card{width: 6.7rem;height: 2.26rem;margin:.44rem auto 0;@extend %centerflex;background: url(../images/card.png) no-repeat;background-size: 100% auto;}
.card img{width: 6.34rem;}
.card canvas{width: 100%;height: 100%}
.box1 .title{margin-top:.16rem;}
.vbox{width: 6.7rem;height: 3.76rem;background: url(../images/vbox.png) no-repeat;background-size: 100% auto;margin:0 auto;@extend %centerflex;position: relative;}
video{width:6.48rem;height: 3.56rem;object-fit:fill;display: block;margin:0;padding: 0;}
.poster{position: absolute;left:0;top:0;right:0;bottom:0;margin:auto;width: 6.5rem}
.play{position: absolute;width:.92rem;height:.92rem;background: url(../images/play.png);background-size:100% auto;top:0;bottom: 0;left:0;right:0;margin:auto;}
.b3{background-position: 0 -2rem;margin:0 auto .9rem}
.b4{background-position: 0 -6rem;margin:0 auto .9rem}
.b5{background-position: 0 -8rem;margin:0 auto .9rem}
.box3 p{color: $greytext;font-size: .24rem;text-align: center;}
.goRead{font-size: .24rem;line-height: .76rem;text-align: center;border-top:1px solid #4f5256;margin:0 .3rem .4rem}
.goRead span{color: #e4bf3b;}
//card
.tip{position: relative;}
.tip .text{font-size: .36rem;color: #6a4a24;line-height: .54rem;position: absolute;top:.35rem;left:0;text-align: center;width: 100%}
.ggk{width: 6.34rem;height: 1.9rem;position: relative;}
.result{background:#d2d2d2;width: 100%;height: 100%;@extend %centerflex;-webkit-box-orient:vertical;-webkit-flex-direction:column;color: $greytext;text-align: center;}
.result p{font-size: .48rem;color: #b06625;}
.result span{color: $greytext;font-size: .28rem;display: block;line-height: .5rem}
.result .none{color: $greytext}
.ggk canvas{position: absolute;top:0;left: 0;}
.card .hide{position: absolute; left:0;top:0;z-index: 10}
// swiper-wrapper
.iSlider{
    width:6.08rem;
    height: 3.4rem;
    margin: .5rem auto .3rem;
    position: relative;
    // perspective:800px;
}
.iSlider li {
    position: absolute; 
    top:0;
    left:0;
    right:0;
    margin:auto;
    width:2.56rem;
}
.iSlider li img{
	border:1px solid #a87a34;
}
.iSlider .li1{
	-webkit-transform:translate3d(-2rem,0,0) scale(.8);
	transform:translate3d(-2rem,0,0) scale(.8);
	z-index: 2;
	// opacity: .6;
	-webkit-transition:-webkit-transform 1s,opacity .2s .5s;
	transition:transform 1s,opacity .2s .5s;
}
.iSlider .li2{
	opacity: 1;
	z-index:3; 
	-webkit-transform:translate3d(0,0,0) scale(1);
	transform:translate3d(0,0,0) scale(1);
	-webkit-transition:-webkit-transform 1s,opacity .2s;
	transition:transform 1s,opacity .2s;
}
.iSlider .li2 img{
	border:none;
}
.li2::after{
	content:"";
	position: absolute;
	top:-.18rem;
	left:-.18rem;
	width:2.92rem;
	height:3.76rem;
	background: url(../images/bor.png);
	background-size: 100% auto;
	opacity: 0;
}
.shared .li2::after{-webkit-animation:fadeIn 1s .5s forwards;}
@-webkit-keyframes fadeIn{
	100%{opacity: 1}
}
.iSlider .li3{
	-webkit-transform:translate3d(2rem,0,0) scale(.8);
	transform:translate3d(2rem,0,0) scale(.8);
	z-index: 1;
	// opacity: .6;
	-webkit-transition:-webkit-transform 1s,opacity .2s .5s;
	transition:transform 1s,opacity .2s .5s;
}
.bdesc{position: relative;height: 1.4rem;margin:.6rem .5rem .26rem;}
.bdesc li{
	position: absolute;
	width: 100%;
	left:0;
	top:0;
	opacity: 0;
	-webkit-transition:opacity 1s;
	transition:opacity 1s;
}
.bdesc .li2{opacity: 1;z-index: 3}
.bdesc .bt{color: #fefefe;font-size: .32rem;text-align: center;margin-bottom: .16rem;}
.bdesc p{line-height: .4rem;text-align: left;display: -webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:3;overflow: hidden;;text-overflow:ellipsis}
.intro{margin-top:-.1rem;}
